 
  
  <div class="container">
  <div class="new_formbg">
  <div class="mainbg">
  <div class="new_formheadingbg">Forgot your password?</div>
     <div class="login_coloumn">
 <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
 <table width="274" height="180" border="0" align="center">
  
 
  <tr>
    <td height="35" colspan="2"> 
     
         
          <%= f.email_field :email,:placeholder=>"Email",:class=>"textfieldclass" %>
        
       <div>
    
    <span style="color:red">
    <%if  @user.errors.messages.has_key? :email   %>
      <!--
      here also i need to check if the message is also not blank because its showing on first page also. that is
      on first time comes on page it should not show the message 
      -->
      <%if !@user.errors.messages[:email][0].blank?%>
            Email  <%=@user.errors.messages[:email][0] %>
      <%end%> 
    
    <%end%>
    </span>
    
    </div>
       </td>
  </tr>
  
  <tr>
 
    <td width="85"> 
      <label>
        <%= f.submit "Reset Password" ,:class=>"",:id=>"newsubmit_button"%>
        
        </label>
         </td>
  </tr>
</table>
   <% end %>    
       
 <div class="footer">
 <div class="signinbutton">
 <%#= render "devise/shared/links" %>
    </div>
 </div>
 </div>
  </div>
 </div>
 </div>
